<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="数据操作"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />
    <!-- 在现有按钮后面添加 -->
    <Button
        android:id="@+id/btnPlateManage"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#795548"
        android:text="板标管理"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    <!-- 在现有按钮后面添加 -->
    <Button
        android:id="@+id/btnBranchClear"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#FF5722"
        android:text="分公司数据清空"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btnReceiving"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#9C27B0"
        android:text="收货"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- 新增箱唛录入按钮 -->
    <Button
        android:id="@+id/btnXiangmaInput"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#FF9800"
        android:text="箱唛录入"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnBindArea"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#607D8B"
        android:text="绑定区域、更换板标"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- 移除批量绑定区域按钮 -->

    <Button
        android:id="@+id/btnAreaQuery"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#4CAF50"
        android:text="批量绑定提单号"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#999999"
        android:text="返回"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>