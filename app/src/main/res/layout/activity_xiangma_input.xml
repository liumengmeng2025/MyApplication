<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="箱唛录入"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333" />

    <!-- 模式选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/rgMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAutoSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动保存"
                android:textSize="10sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbBatchSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批量保存"
                android:textSize="10sp"
                android:layout_marginStart="10dp" />

        </RadioGroup>

    </LinearLayout>

    <!-- 箱唛输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">

        <EditText
            android:id="@+id/etXiangma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dittext_border"
            android:hint="请扫描或输入箱唛"
            android:imeOptions="actionDone"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="0dp"
            android:text="扫描"
            android:textSize="10sp"
            android:backgroundTint="#2196F3" />

    </LinearLayout>

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/btnSingleSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="单条保存"
            android:textSize="10sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBatchSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:text="批量保存"
            android:textSize="10sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="清空列表"
            android:textSize="10sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginBottom="0dp"
        android:background="#E8F5E8"
        android:gravity="center"
        android:padding="1dp"
        android:text="状态：自动保存模式 - 扫描后1秒自动保存"
        android:textColor="#2E7D32"
        android:textSize="10sp" />

    <!-- 暂存列表标题和计数（改为一行显示） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="暂存列表 (未保存)"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvListCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="共 0 条记录"
            android:textColor="#666666"
            android:textSize="10sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvTempList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp" />


</LinearLayout>