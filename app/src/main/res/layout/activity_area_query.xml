<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="区域查询"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!-- 输入框 -->
    <EditText
        android:id="@+id/et_area_input"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="请输入区域名称或板标"
        android:paddingHorizontal="12dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textSize="16sp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <!-- 区域查询按钮 -->
        <Button
            android:id="@+id/btn_query_area"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#2196F3"
            android:text="区域查询"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- 板标查询按钮 -->
        <Button
            android:id="@+id/btn_query_plate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:backgroundTint="#4CAF50"
            android:text="板标模糊查询"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 批量更新提单号按钮 -->
    <Button
        android:id="@+id/btn_batch_update_bill"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800"
        android:text="批量更新提单号"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- 结果显示区域（滚动视图） -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 结果标题 -->
            <TextView
                android:id="@+id/tv_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询结果"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- 总记录数 -->
            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:background="#E3F2FD"
                android:textColor="#1976D2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone" />

            <!-- 结果列表（每个区域的记录项） -->
            <LinearLayout
                android:id="@+id/ll_result_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <!-- 无结果提示 -->
            <TextView
                android:id="@+id/tv_no_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="未查询到相关记录"
                android:textColor="#999999"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>