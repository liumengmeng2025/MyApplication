<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productDetailContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:layout_margin="2dp"
    android:elevation="0dp">

    <!-- 商品货号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvProductCodeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="商品货号："
            android:padding="0dp"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvProductCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="0dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 商品名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvProductNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="商品名称："
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:padding="0dp"
            android:textSize="16sp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 69码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvBarcodeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="69码："
            android:padding="0dp"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvBarcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 规格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvSpecificationLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="规格："
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvSpecification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 库位 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="库位："
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 数量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvQuantityLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="数量："
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- 已复核数量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tvReviewedLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="0dp"
            android:text="已复核数量："
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etReviewed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:inputType="number"
            android:padding="0dp"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 更新按钮 -->
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新复核数量"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="1dp"
        android:padding="0dp" />

</LinearLayout>