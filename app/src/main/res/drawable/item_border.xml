<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 浅灰色边框 -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>
    <!-- 内边距：避免文字贴边框 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
    <!-- 轻微圆角：提升美观度 -->
    <corners android:radius="4dp"/>
    <!-- 白色背景：覆盖列表默认背景 -->
    <solid android:color="#FFFFFF"/>
</shape>